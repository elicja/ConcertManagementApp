@model List<ConcertInfo>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Concert List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row mb-4">
            <a asp-controller="ConcertInfo" asp-action="Create" class="btn btn-dark">
                <div class="btn text-white"><i class="bi bi-plus-circle"></i> Add Concert</div>
            </a>
        </div>
        

        <table class="table table-bordered table-striped">
            <thead class="text-center text-nowrap">
                <tr>
                    <th>
                        Concert Name
                    </th>
                    <th>
                        Ticket Price
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        Music Genre
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var concert in Model.ToList())
                {
                    <tr>
                        <td>@concert.Title</td>
                        <td>
                            @concert.TicketPrice
                        </td>
                        <td>
                            @concert.Date
                        </td>
                        <td>
                            @concert.Address
                        </td>
                        <td>
                            @concert.City.Value
                        </td>
                        <td>
                            @concert.MusicGenre.Value
                        </td>
                        <td>
                            @concert.Description
                        </td>
                        

                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ConcertInfo" asp-action="Edit" asp-route-concertId="@concert.Id" class="btn btn-dark mx-2">
                                    <i class="bi bi-pen"></i>
                                </a>
                                <a asp-controller="ConcertInfo" asp-action="Delete" asp-route-concertId="@concert.Id" class="btn btn-danger mx-2">
                                     X
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>