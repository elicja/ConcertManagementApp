@model PerformanceInfo

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Performance</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12 text-center">
                    <h3>Do you really want to remove this performance?</h3>
                    <h5 class="text-center mt-3">@Model.Artist.Value @Model.StartHour</h5>
                </div>
                <div class="row mt-3">
                    <div class="btn col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete Performance</button>
                    </div>
                    <div class="btn col-6 ">
                        <a asp-controller="Performance" asp-action="Index" asp-route-concertId="@Model.ConcertId" class="btn btn-dark form-control">
                            Back to List
                        </a>
                    </div>
                </div>               
            </div>
        </form>
    </div>
</div>