@model PerformanceInfoVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Performence</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="PerformanceInfo.Id" hidden />
            <input asp-for="PerformanceInfo.ConcertId" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <select asp-for="PerformanceInfo.ArtistId" asp-items="@Model.Artists" class="form-select border-0 shadow">
                        <option disabled selected>--Select The Artist--</option>
                    </select>
                    <label asp-for="PerformanceInfo.Artist" class="ms-2"></label>
                    <span asp-validation-for="PerformanceInfo.Artist" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PerformanceInfo.StartHour" class="form-control border-0 shadow" />
                    <label asp-for="PerformanceInfo.StartHour" class="ms-2"></label>
                    <span asp-validation-for="PerformanceInfo.StartHour" class="text-danger"></span>
                </div>
                <div class="row mt-3 text-center align-content-center">
                    <div class="col-6">
                        <button class="btn btn-dark form-control">Update Performence</button>
                    </div>                    
                    <div class="col-6">
                        <a asp-controller="ConcertInfo" asp-action="Edit" asp-route-concertId="@Model.PerformanceInfo.ConcertId" class="btn btn-secondary form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>