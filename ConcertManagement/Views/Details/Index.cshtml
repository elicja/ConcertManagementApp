@using Models.Enum;
@model DetailsVm

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row mb-4">
            <a asp-controller="Details" asp-action="Create" asp-route-type="@DetailType.Artist" class="btn btn-dark">
                <div class="btn text-white"><i class="bi bi-plus-circle"></i> Add Artist</div>
            </a>
        </div>        

        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th>
                        Artist Name
                    </th>
                    <th class="text-center">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var artist in Model.Artists)
                {
                    <tr>
                        <td>@artist.Value</td>
                        <td class="col-1 text-center">
                            <div class=" btn-group" role="group">
                                <a asp-controller="Details" asp-action="Delete" asp-route-id="@artist.Id" asp-route-type="@DetailType.Artist" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i> X
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-body p-4">
        <div class="row mb-4">
            <a asp-controller="Details" asp-action="Create" asp-route-type="@DetailType.City" class="btn btn-dark">
                <div class="btn text-white"><i class="bi bi-plus-circle"></i> Add City</div>
            </a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        City
                    </th>
                    <th class="text-center">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var city in Model.Cities)
                {
                    <tr>
                        <td>@city.Value</td>
                        <td class="text-center col-1">
                            <div class="btn-group" role="group">
                                <a asp-controller="Details" asp-action="Delete" asp-route-id="@city.Id" asp-route-type="@DetailType.City" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i> X
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-body p-4">
        <div class="row mb-4">
            <a asp-controller="Details" asp-action="Create" asp-route-type="@DetailType.MusicGenre" class="btn btn-dark">
                <div class="btn text-white"><i class="bi bi-plus-circle"></i> Add Music Genre</div>
            </a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Music Genre
                    </th>
                    <th class="text-center">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model.MusicGenres)
                {
                    <tr>
                        <td>@genre.Value</td>
                        <td class="text-center col-1">
                            <div class="btn-group" role="group">
                                <a asp-controller="Details" asp-action="Delete" asp-route-id="@genre.Id" asp-route-type="@DetailType.MusicGenre" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i> X
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>