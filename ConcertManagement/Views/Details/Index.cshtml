@using Models.Enum;
@model DetailsVm

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradiant ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Details" asp-action="Create" asp-route-type="@DetailType.Artist" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> Add Artist
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Artist Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var artist in Model.Artists)
                {
                    <tr>
                        <td>@artist.Value</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Details" asp-action="Delete" asp-route-id="@artist.Id" asp-route-type="@DetailType.Artist" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Details" asp-action="Create" asp-route-type="@DetailType.City" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> Add City
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        City
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var city in Model.Cities)
                {
                    <tr>
                        <td>@city.Value</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Details" asp-action="Delete" asp-route-id="@city.Id" asp-route-type="@DetailType.City" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Details" asp-action="Create" asp-route-type="@DetailType.MusicGenre" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> Add Music Genre
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Music Genre
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model.MusicGenres)
                {
                    <tr>
                        <td>@genre.Value</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Details" asp-action="Delete" asp-route-id="@genre.Id" asp-route-type="@DetailType.MusicGenre" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>