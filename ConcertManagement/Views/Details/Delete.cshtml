@using Models.Base;
@model DetailsManagementVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradiant ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Data</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="@Model.Data.Id" hidden />
            <input asp-for="@Model.Type" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <p>Do you really want to remove this data? Data value:@Model.Data.Value</p>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete Concert</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Details" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>