@model PerformenceInfoVm

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Performence</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="@Model.PerformenceInfo.ConcertId" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <select asp-for="PerformenceInfo.ArtistId" asp-items="@Model.Artists" class="form-select border-0 shadow">
                        <option disabled selected>--Select The Artist--</option>
                    </select>
                    <label asp-for="PerformenceInfo.Artist" class="ms-2"></label>
                    <span asp-validation-for="PerformenceInfo.Artist" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PerformenceInfo.StartHour" class="form-control border-0 shadow" />
                    <label asp-for="PerformenceInfo.StartHour" class="ms-2"></label>
                    <span asp-validation-for="PerformenceInfo.StartHour" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 ">
                        <button type="submit" class="btn btn-primary form-control">Add New Performance</button>
                    </div>
                    <div class="col-6 ">
                        <a asp-controller="Performence" asp-action="Create" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>